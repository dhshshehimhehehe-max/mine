-- Creating GUI
local player = game:GetService("Players").LocalPlayer
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 300)
frame.Position = UDim2.new(0, 20, 0, 20)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.Parent = screenGui

local title = Instance.new("TextLabel")
title.Size = UDim2.new(0, 200, 0, 50)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
title.Text = "Auto Miner & Events"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.TextSize = 18
title.Parent = frame

-- Perfect Hit Button
local perfectHitButton = Instance.new("TextButton")
perfectHitButton.Size = UDim2.new(0, 180, 0, 50)
perfectHitButton.Position = UDim2.new(0, 10, 0, 60)
perfectHitButton.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
perfectHitButton.Text = "Auto Perfect Hit"
perfectHitButton.TextColor3 = Color3.fromRGB(255, 255, 255)
perfectHitButton.TextSize = 16
perfectHitButton.Parent = frame

-- Meteor Shower Button
local meteorShowerButton = Instance.new("TextButton")
meteorShowerButton.Size = UDim2.new(0, 180, 0, 50)
meteorShowerButton.Position = UDim2.new(0, 10, 0, 120)
meteorShowerButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
meteorShowerButton.Text = "Start Meteor Shower"
meteorShowerButton.TextColor3 = Color3.fromRGB(255, 255, 255)
meteorShowerButton.TextSize = 16
meteorShowerButton.Parent = frame

-- Birthday Claim Button
local birthdayClaimButton = Instance.new("TextButton")
birthdayClaimButton.Size = UDim2.new(0, 180, 0, 50)
birthdayClaimButton.Position = UDim2.new(0, 10, 0, 180)
birthdayClaimButton.BackgroundColor3 = Color3.fromRGB(255, 165, 0)
birthdayClaimButton.Text = "Claim Birthday Gift"
birthdayClaimButton.TextColor3 = Color3.fromRGB(255, 255, 255)
birthdayClaimButton.TextSize = 16
birthdayClaimButton.Parent = frame

-- Function to trigger Perfect Hit
local function autoPerfectHit()
    local args = { Instance.new("Part", nil), 0, Enum.NormalId.Front }
    game:GetService("Players").LocalPlayer.Character:WaitForChild("Steady Pickaxe"):WaitForChild("pickaxeMine"):InvokeServer(unpack(args))
end

-- Function to trigger Meteor Shower
local function startMeteorShower()
    game:GetService("ReplicatedStorage").Events.MeteorShower:FireServer()
end

-- Function to trigger Birthday Claim
local function claimBirthdayGift()
    game:GetService("ReplicatedStorage").Events.BirthdayClaim:FireServer()
end

-- Button Actions
perfectHitButton.MouseButton1Click:Connect(function()
    autoPerfectHit()
end)

meteorShowerButton.MouseButton1Click:Connect(function()
    startMeteorShower()
end)

birthdayClaimButton.MouseButton1Click:Connect(function()
    claimBirthdayGift()
end)

-- Optional: Add keypress detection to auto-start the perfect hit for mining if you want
local userInputService = game:GetService("UserInputService")
userInputService.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        autoPerfectHit()
    end
end)
